@model IEnumerable<mvc_dev_2017.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="col-md-3">
    @Html.ActionLink("Create New", "Create")
</div>
<div class="col-md-9 text-right">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

            <input name="Title" id="Title" placeholder="Search by Album Title" />

            <button class="btn btn-default">Search</button>

    }
</div>

<h2>@ViewBag.AlbumCount Albums</h2>

<table class="table sortable table-striped table-hover">
    <tr>
        <th class="sortHeading">
           Artist
        </th>
        <th class="sortHeading">
            Genres
        </th>
        <th class="sortHeading">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="sortHeading">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
